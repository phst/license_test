    name = "phst_license_test",
    bazel_compatibility = [">=7.0.0"],
)

bazel_dep(name = "platforms", version = "0.0.11")
bazel_dep(name = "bazel_skylib", version = "1.7.1")
bazel_dep(name = "aspect_bazel_lib", version = "2.10.0")
bazel_dep(name = "rules_go", version = "0.51.0")
bazel_dep(name = "gazelle", version = "0.41.0")

bazel_dep(name = "buildifier_prebuilt", version = "8.0.0", dev_dependency = True)

# FIXME: The following dependency shouldnâ€™t be needed.  Bug in Stardoc?
